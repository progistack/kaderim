<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="details_marge_report_template">
        <t t-call="web.html_container">
            <!--<t t-call="web.external_layout">-->

            <div class="page" style="margin-left:80px; margin-top:20px; margin-bottom:20px;">
                <div class="Body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th colspan="5"
                                    style="text-align:center; text-transform:uppercase; background-color:#34495E; color:white;">
                                    Détailles des marges
                                </th>
                            </tr>
                        </thead>

                        <tbody>
                            <tr style="">
                                <td colspan="3" style="text-transform:uppercase;">Compagnie :
                                    <span t-esc="compagnie"></span>
                                </td>
                                <td colspan="2" style="text-transform:uppercase;">Période :
                                    <span t-esc="periode"></span>
                                </td>
                            </tr>
                            <t t-if="message">
                                <tr>
                                    <td colspan="5" style="text-transform:uppercase; color:#ff0000; text-align:center;">
                                        Désolé vous
                                        n'avez pas réalisé de commandes durant cette période.
                                    </td>
                                </tr>
                            </t>
                            <t t-else="">
                                <tr>
                                    <td style="text-transform:uppercase; color:#2E4053; font-weight:bold;">Articles</td>
                                    <td style="text-transform:uppercase; color:#2E4053; font-weight:bold;">Quatités</td>
                                    <td style="text-transform:uppercase; color:#2E4053; font-weight:bold;">Prix
                                        unitaire
                                    </td>
                                    <td style="text-transform:uppercase; color:#2E4053; font-weight:bold;">Marge
                                        unitaire
                                    </td>
                                    <td style="text-transform:uppercase; color:#2E4053; font-weight:bold;">Marge
                                        globale
                                    </td>
                                </tr>
                                <t t-foreach="commande" t-as="o">
                                    <tr>
                                        <td>
                                            <span t-esc="o['nom']"></span>
                                        </td>
                                        <td>
                                            <span t-esc="o['quantite']"></span>
                                            Unité(s)
                                        </td>
                                        <td>
                                            <span t-esc="o['prix_unitaire']"></span>
                                            CFA
                                        </td>
                                        <td>
                                            <span t-esc="o['marge_unitaire']"></span>
                                            CFA
                                        </td>
                                        <td>
                                            <span t-esc="o['marge_global']"></span>
                                            CFA
                                        </td>
                                    </tr>
                                </t>
                            </t>
                            <!--tr>
                                <th colspan="4" style="text-transform:uppercase; color:#2E4053;">Paiements</th>
                            </tr>
                            <tr>
                                <td>Nom</td>
                                <td></td>
                                <td></td>
                                <td>Total</td>
                            </tr>
                            <tr>
                                <th colspan="4" style="text-transform:uppercase;color:#2E4053;">Taxes</th>
                            </tr>
                            <tr>
                                <td>Nom</td>
                                <td>Montant de la paie</td>
                                <td>Mantant de base</td>
                                <td></td>
                            </tr>
                            <tr>
                                <td colspan="5"></td>
                            </tr-->
                        </tbody>

                    </table>
                </div>
            </div>
        </t>
    </template>
</odoo>