<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_marge_detail_form" model="ir.ui.view">
        <field name="name">marge.datail.view.form</field>
        <field name="model">marge.detail.wizard</field>
        <field name="arch" type="xml">
            <form string="Détails De Marges">
                <group>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </group>
                <group>
                    <field name="pos_config_ids" mode="tree" colspan="4" nolabel="1"/>
                </group>
                <footer>
                    <button name="generate_report" string="Imprimer" type="object" class="btn-primary" data-hotkey="q"/>
                    <button string="Annuler" class="btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>


    <record id="action_marge_details" model="ir.actions.act_window">
        <field name="name">Détails de Marges</field>
        <field name="res_model">marge.detail.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>


    <menuitem id="menu_marge_details"
              name="Détails des Marges"
              parent="point_of_sale.menu_point_rep"
              action="action_marge_details"
              sequence="5"
    />

</odoo>